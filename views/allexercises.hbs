


<section class="container" ng-app="liftsApp">


      <article class="row" ng-controller="LiftListCtrl">
        <div class="col-md-12">

          <ul ng-sortable="{animation:150}">
            <li ng-repeat="lift in lifts">
              <div class ="card">
              <div class = "card-content">
              <span class="card-title activator grey-text text-darken-4"><strong>//lift.Name//</strong><i class="material-icons right">more_vert</i></span>
              </div>

                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4"><strong>//lift.Name//</strong><i class="material-icons right">close</i></span>
                  <p> <em>//lift.Description//</em></p>
              </div>
              </div>

              <form ng-submit="addTo(lift.Name, lift.Description)">
                <input type="submit" value="Add Lift" class="btn btn-primary">
              </form>

              <!-- <button data-lift="//lift._id//" ng-click="addTo(lift)" className="addToButton">Add to Workout</button> -->
            </li>
          </ul>

        </div>
      </div>

    </section>



